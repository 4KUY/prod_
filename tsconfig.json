{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es2020",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    
    "baseUrl": "./src", 
    "paths": {
      "shared/*": ["shared/*"],
      "app/*": ["app/*"],
      "entities/*": ["entities/*"],
      "features/*": ["features/*"],
      "pages/*": ["pages/*"],
      "widgets/*": ["widgets/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "skipLibCheck": true
  },
  "include": [
    "src", 
    "config/jest/setupTests.ts"
  ]
}
